@page
@model Univer2.Pages.People.IndexModel
@{
    ViewData["Title"] = "Список пользователей";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Курс</th>
            <th>Группа</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.SurName</td>
                <td>@person.Course</td>
                <td>@person.Gruop</td>
                <td><form method="post"><input type="submit" asp-page-handler="Delete" value="Удалить" asp-route-id="@person.Id"/></form></td>
            </tr>
        }
    </tbody>
</table>

<form method="POST">
    
    <div>
        <label asp-for="Person.Name" class="control-label"></label>
        <input asp-for="Person.Name" />
        <span asp-validation-for="Person.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Person.SurName" class="control-label"></label>
        <input asp-for="Person.SurName" />
        <span asp-validation-for="Person.SurName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Person.Course" class="control-label"></label>
        <input asp-for="Person.Course" type="number" />
        <span asp-validation-for="Person.Course" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Person.Gruop" class="control-label"></label>
        <input asp-for="Person.Gruop" type="number" />
        <span asp-validation-for="Person.Gruop" class="text-danger"></span>
    </div>
    <input type="submit" value="Отправить" />
</form>

